<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="10dp">

    <RelativeLayout
        android:id="@+id/internalLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/item_quantity"
        android:layout_marginEnd="20dp">
        <TextView
            android:text="CONTAINER"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/imageview_order_item_picture"
            android:layout_toEndOf="@+id/imageview_order_item_picture"
            android:id="@+id/textview_order_item_container"
            android:textSize="24sp" />

        <TextView
            android:text="Flavors"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textview_order_item_container"
            android:layout_toRightOf="@+id/imageview_order_item_picture"
            android:layout_toEndOf="@+id/imageview_order_item_picture"
            android:id="@+id/textview_order_item_flavors"
            android:textSize="18sp" />

        <TextView
            android:text="toppings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textview_order_item_flavors"
            android:layout_toRightOf="@+id/imageview_order_item_picture"
            android:layout_toEndOf="@+id/imageview_order_item_picture"
            android:id="@+id/textview_order_item_addins"
            android:textSize="18sp" />

        <ImageView
            android:layout_width="50dp"
            android:layout_marginRight="10dp"
            app:srcCompat="@color/cast_expanded_controller_ad_label_background_color"
            android:id="@+id/imageview_order_item_picture"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_height="50dp" />
    </RelativeLayout>

    <NumberPicker
        android:id="@+id/item_quantity"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_height="100dp"
        android:layout_width="30dp" />

</RelativeLayout>