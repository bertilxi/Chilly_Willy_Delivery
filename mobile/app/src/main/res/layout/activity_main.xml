<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="dam.isi.frsf.utn.edu.ar.delivery.activity.MainActivity">

    <Button
        android:text="Hacer un pedido"
        android:drawableLeft="@android:drawable/ic_menu_edit"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/btnOrder"
        android:backgroundTint="@color/colorPrimary"
        android:textColor="@android:color/white"
        android:layout_height="wrap_content" />

    <Button
        android:text="¡¿Donde esta mi helado?!"
        android:drawableLeft="@android:drawable/ic_menu_mapmode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnOrder"
        android:layout_centerHorizontal="true"
        android:id="@+id/btnLocation"
        android:backgroundTint="@color/colorPrimary"
        android:textColor="@android:color/white" />

    <Button
        android:text="Dinos tu opinion"
        android:drawableLeft="@android:drawable/sym_action_chat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnLocation"
        android:layout_alignRight="@+id/btnLocation"
        android:layout_alignEnd="@+id/btnLocation"
        android:id="@+id/btnReview"
        android:backgroundTint="@color/colorPrimary"
        android:textColor="@android:color/white" />

</RelativeLayout>
