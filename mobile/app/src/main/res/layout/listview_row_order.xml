<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingLeft="10dp">

    <TextView
        android:id="@+id/textview_order_date_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Orden con fecha:"
        android:textColor="?android:attr/textColorPrimary"
        android:textSize="20sp"
        android:textStyle="normal|bold" />

    <TextView
        android:id="@+id/textview_order_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fecha"
        android:textAlignment="textStart"
        android:textColor="?android:attr/textColorSecondary"
        android:textSize="18sp"
        android:layout_alignBaseline="@+id/textview_order_date_label"
        android:layout_alignBottom="@+id/textview_order_date_label"
        android:layout_toEndOf="@+id/textview_order_date_label"
        android:layout_marginStart="16dp" />


</RelativeLayout>